# =========================
# Django (Development)
# =========================

# Secret key for local dev only. Use a strong unique key in production!
DJANGO_SECRET_KEY=dev-CHANGE-ME-LOCAL-ONLY

# Enable Django debug in development.
# Values: 1/true/on | 0/false/off
DJANGO_DEBUG=1

# Hosts allowed to access the app.
# Comma-separated list, no spaces.
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Timezone and timezone-aware datetimes
# Example TZ: Europe/Zurich, UTC, Europe/Berlin, etc.
DJANGO_TIME_ZONE=Europe/Zurich
DJANGO_USE_TZ=1

# Static files handling via WhiteNoise.
# In dev it's typically not needed; leave empty to auto-disable when DEBUG=1.
# Values: 1 to force enable, leave empty for auto.
DJANGO_USE_WHITENOISE=

# Security features OFF in dev (served over HTTP).
DJANGO_SECURE_SSL_REDIRECT=0
DJANGO_SESSION_COOKIE_SECURE=0
DJANGO_CSRF_COOKIE_SECURE=0
DJANGO_SECURE_HSTS_SECONDS=0
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=0
DJANGO_SECURE_HSTS_PRELOAD=0

# CSRF trusted origins for local dev (adjust ports if needed).
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Default UI language. Switchable in the UI.
# Options: de, gsw, en, fr, es, pl
LANGUAGE_CODE=de

# =========================
# Database (Development)
# =========================

# Use SQLite by default for simplest local dev.
# Tip: Use an absolute path if you want the DB outside the repo folder.
DATABASE_URL=sqlite:///db.sqlite3

# Alternatively, uncomment for local Postgres:
# POSTGRES_DB=moodapp
# POSTGRES_USER=mood
# POSTGRES_PASSWORD=CHANGE-ME-STRONG-PASSWORD
# DATABASE_URL=postgresql://mood:CHANGE-ME-STRONG-PASSWORD@localhost:5432/moodapp
