# =========================
# Django (Docker - Local)
# =========================

# Always set a real secret here (even for local docker).
DJANGO_SECRET_KEY=CHANGE-ME-STRONG-SECRET

# In containers we usually run with DEBUG=0 (closer to prod), but you can flip to 1 while testing.
DJANGO_DEBUG=0

# For Docker on localhost it's typically fine:
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

DJANGO_TIME_ZONE=Europe/Zurich
DJANGO_USE_TZ=1

# WhiteNoise is recommended in containerized setups.
DJANGO_USE_WHITENOISE=1

# Security toggles for local docker (HTTP).
DJANGO_SECURE_SSL_REDIRECT=0
DJANGO_SESSION_COOKIE_SECURE=0
DJANGO_CSRF_COOKIE_SECURE=0
DJANGO_SECURE_HSTS_SECONDS=0
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=0
DJANGO_SECURE_HSTS_PRELOAD=0

# CSRF origins for local docker (adjust host if you reverse-proxy)
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:8000

# Default UI language (switchable in UI)
LANGUAGE_CODE=de

# =========================
# Database (Docker - Local)
# =========================

# These are used by the 'db' service in docker-compose.yml
POSTGRES_DB=moodapp
POSTGRES_USER=mood
POSTGRES_PASSWORD=CHANGE-ME-LOCAL-ONLY

# And this is how Django connects to that db service:
# Note host is 'db' (the service name in docker-compose).
DATABASE_URL=postgresql://mood:CHANGE-ME-LOCAL-ONLY@db:5432/moodapp
