# =========================
# Django (Production)
# =========================

# Strong, unique secret key â€“ never commit real secrets to VCS!
DJANGO_SECRET_KEY=CHANGE-ME-VERY-STRONG-UNIQUE-SECRET

# Debug must be OFF in production.
DJANGO_DEBUG=0

# All production hostnames that should serve this app (no spaces).
# Include your main domain and any additional hosts behind reverse proxies.
DJANGO_ALLOWED_HOSTS=app.example.com,api.example.com

DJANGO_TIME_ZONE=Europe/Zurich
DJANGO_USE_TZ=1

# Serve static files via WhiteNoise (recommended for simple deployments).
DJANGO_USE_WHITENOISE=1

# Enforce HTTPS and secure cookies in production.
DJANGO_SECURE_SSL_REDIRECT=1
DJANGO_SESSION_COOKIE_SECURE=1
DJANGO_CSRF_COOKIE_SECURE=1

# HSTS: enable for strict transport security (careful in staged rollouts).
# 31536000 = one year; adjust to your policy/rollout plan.
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=1
DJANGO_SECURE_HSTS_PRELOAD=1

# CSRF trusted origins (must include scheme, e.g. https://)
# Add all origins that will POST to your site (admin, FE domains, etc.).
DJANGO_CSRF_TRUSTED_ORIGINS=https://app.example.com,https://admin.example.com

# Default UI language (switchable in UI)
LANGUAGE_CODE=en

# =========================
# Database (Production)
# =========================

# PostgreSQL connection string (preferred in prod).
# Replace all placeholders with your real credentials/host/db.
DATABASE_URL=postgresql://CHANGE-ME-DB-USER:CHANGE-ME-DB-PASSWORD@CHANGE-ME-DB-HOST:5432/CHANGE-ME-DB-NAME

# Optional: set these if your platform needs them separately
POSTGRES_DB=CHANGE-ME-DB-NAME
POSTGRES_USER=CHANGE-ME-DB-USER
POSTGRES_PASSWORD=CHANGE-ME-DB-PASSWORD
