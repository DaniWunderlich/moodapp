# =========================
# Django (Generic template)
# =========================

# REQUIRED: set a strong, unique secret key in every environment.
DJANGO_SECRET_KEY=CHANGE-ME-STRONG-SECRET

# Debug mode: 0 for production, 1 only for development/testing.
DJANGO_DEBUG=0

# Comma-separated list of allowed hostnames (no spaces).
# Examples:
#   myapp.example.com
#   myapp.example.com,api.example.com
#   localhost,127.0.0.1
DJANGO_ALLOWED_HOSTS=myapp.example.com

# Timezone and timezone-awareness
DJANGO_TIME_ZONE=Europe/Zurich
DJANGO_USE_TZ=1

# WhiteNoise static file serving:
#   leave empty to auto: enabled when DEBUG=0, disabled when DEBUG=1
#   or set 1 to force-enable.
DJANGO_USE_WHITENOISE=

# Security (set all to secure values in production)
# SSL redirect (1 for HTTPS-only)
DJANGO_SECURE_SSL_REDIRECT=1
# Cookies marked secure (HTTPS)
DJANGO_SESSION_COOKIE_SECURE=1
DJANGO_CSRF_COOKIE_SECURE=1
# HSTS: 31536000 = one year (adjust to your policy)
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=1
DJANGO_SECURE_HSTS_PRELOAD=1

# CSRF trusted origins (scheme + host + optional port), comma-separated
# Example: https://myapp.example.com,https://admin.example.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://myapp.example.com

# Default UI language (switchable in UI)
# Options: de, gsw, en, fr, es, pl
LANGUAGE_CODE=en

# =========================
# Database (Generic)
# =========================

# Choose one of the following URLs (uncomment the one you use):

# PostgreSQL (recommended for prod):
# DATABASE_URL=postgresql://DB_USER:DB_PASSWORD@DB_HOST:5432/DB_NAME

# SQLite (simple dev/testing, not for production):
# DATABASE_URL=sqlite:///db.sqlite3

# Example Postgres values (replace all CHANGE-ME):
# POSTGRES_DB=CHANGE-ME-DB-NAME
# POSTGRES_USER=CHANGE-ME-DB-USER
# POSTGRES_PASSWORD=CHANGE-ME-DB-PASSWORD
# DATABASE_URL=postgresql://CHANGE-ME-DB-USER:CHANGE-ME-DB-PASSWORD@CHANGE-ME-DB-HOST:5432/CHANGE-ME-DB-NAME
